#visCanvas
  position fixed
  top navbar-top-height
  left 0
  right sidebar-width
  bottom navbar-bottom-height

#rightPanelTop
  position fixed
  top navbar-top-height
  width sidebar-width
  right 0
  bottom navbar-bottom-height
  overflow-y auto
  overflow-x hidden
  box-shadow -1px 0 1px rgba(0,0,0,.3)

#linkingCriteriaEvidence
  .label-default
    color gray
    background transparent
    border solid 1px gray
    margin-left 10px

#linkingCriteriaSuggestionContainer
  // border solid 1px gs[6]
  margin-top 10px
  height navbar-bottom-container-height
  overflow-y auto
  overflow-x hidden
  
  .systemSuggestion
    padding 1px 5px
    // font-weight normal
    // color gs[3]
    &:hover
      color gs[0]
      background-color gs[12]
    u
      color #1c94c4

  .btn-group > .btn:first-child, .acceptSuggestion
    // font-size 13.5px
    text-transform none
    margin-left .5em
    // color gs[6]

#manualQuerySpecifier
  border solid #bbb 5px
  padding 10px
  margin 0px
  background white

#activeQueryContainer
  height navbar-bottom-container-height
  overflow-y auto
  overflow-x hidden
  
  .ANDContainer
    min-height 20px
    list-style-type none
    padding 5px
    background #bbb
    margin-bottom 10px
    
    .edgeTypeInputBox
      width 12em
    
    .dropdown-toggle
      padding 1px 10px
      margin-top -4px
      
    .edgeTypeToggleButton
      margin-top -5px
      margin-right 10px
      text-transform none
    
    .label.pull-right
      border-radius(0)
      font-size 120%
    
    .removeCondition
      font-size 12px
      text-transform none
      
    
    li.queryCondition
      padding 3px 10px
      border 0px
      font-weight 400
      color gs[6]
    
    ul.dropdown-menu
      li
        a
          padding 1px 10px

